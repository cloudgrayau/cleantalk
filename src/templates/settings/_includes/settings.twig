{% import "_includes/forms" as forms %}
{% import 'cloudgrayau-utils/_macros' as macros %}
<div id="settings">
    {% namespace "settings" %}
    
    {{ forms.textField({
        label: "API Key",
        instructions: "The [CleanTalk](https://cleantalk.org/) service API key."|md,
        name: 'apiKey',
        value: settings['apiKey'],
        type: 'text',
        errors: settings.getErrors('apiKey'),
        warning: macros.configWarning('apiKey', 'cleantalk')
    }) }}
    
    {{ forms.lightswitchField({
        label: "Enable Bot Detector",
        instructions: "Enable additional bot detector offering greater protection for spam.",
        hints: "test",
        name: 'enableBotDetector',
        on: settings.enableBotDetector,
        warning: macros.configWarning('enableBotDetector', 'cleantalk')
    }) }}
    
    {{ forms.lightswitchField({
        label: "Enable User Registration Protection",
        instructions: "Protect user registrations from spam.",
        name: 'enableUserRegistration',
        on: settings.enableUserRegistration,
        warning: macros.configWarning('enableUserRegistration', 'cleantalk')
    }) }}
    
    <hr />
    <h3>Form Protection</h3>
    
    {{ forms.lightswitchField({
        label: "Enable Form Protection"|t,
        name: 'enableForms',
        on: settings.enableForms,
        warning: macros.configWarning('enableForms', 'cleantalk')
    }) }}
    
    <p>The current form plugins/systems are protected:</p>
    <p>
